@{
}
@model List<CrudEmpleadoEF.Models.Empleado>;

<div class="row">
    <div class="col-sm-9 offset-sm-2">
        <h2>LISTA EMPLEADOS</h2>
        <a asp-controller="Empleado" asp-action="NuevoEmpl" class="btn btn-success mb-3">Nuevo Empleado</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>IdEmpleado</th>
                    <th>Nombre Completo</th>
                    <th>Correo</th>
                    <th>Fecha Contrato</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.IdEmpleado</td>
                        <td>@item.NombreCompleto</td>
                        <td>@item.Correo</td>
                        <td>@item.FechaContrato.ToString("dd/MM/yyyy")</td>
                        <td>@(item.Activo ? "SI" : "NO")</td>
                        <td>
                            <a asp-controller="Empleado" asp-action="EditarEmpl" asp-route-id="@item.IdEmpleado" class="btn btn-primary mb-3">Editar Empleado</a>
                            <a asp-controller="Empleado" asp-action="EliminarEmpl" asp-route-id="@item.IdEmpleado" onclick="return confirmar()" class="btn btn-danger mb-3">Eliminar Empleado</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        function confirmar(){
            return confirm("Esta seguro de eliminar el empleado?")
        }
    </script>
}